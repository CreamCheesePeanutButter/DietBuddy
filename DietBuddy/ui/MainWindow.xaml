<Window x:Class="DietBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DietBuddy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="430*"/>
        </Grid.RowDefinitions>


        <Grid Height="20" Panel.ZIndex="1">
            <Menu>
                <Menu.Effect>
                    <DropShadowEffect Color="Blue" BlurRadius="10" ShadowDepth="3" />
                </Menu.Effect>
                <MenuItem Header ="Option" FontSize="12">
                    <MenuItem Header = "Get Meal" 
                              Click="GetMeal_Click"/>
                    <MenuItem Header="Add dish recipe" 
                              Click ="AddDish_Click"/>
                </MenuItem>
            </Menu>
        </Grid>
        <Grid Name="Page"  Visibility="Hidden" Grid.Row="1">
            <Image Grid.Row="1" 
                   Source="../src/login_background.jpg" 
                   Stretch="Fill" Visibility="Visible" 
                   Panel.ZIndex="0"/>
            <Grid HorizontalAlignment="Center" 
                  VerticalAlignment="Top" 
                  Height="235" 
                  Width="440" 
                  Margin="0,102,0,0" 
                  Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Rectangle Fill="LightBlue"/>
                <Rectangle Grid.Row ="1" 
                           Fill="MintCream"/>
                <TextBlock Text="Welcome to Diet Buddy" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Login" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Grid.Row="1" Text="Username :" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <TextBox Name="username" Grid.Row="1" Width="200" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,100,0"/>
                    <TextBlock Grid.Row="2" Text="Age :" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <TextBox Name ="user_age" Grid.Row="2" Width="200" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,100,0"/>
                    <TextBlock Grid.Row="3" Text="Weight :" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <TextBox Name = "user_weight" Grid.Row="3" Width="200" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,100,0"/>
                    <Button Grid.Row="4" Content="Login" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoginButton_Click"/>

                </Grid>
            </Grid>
        </Grid>

        <Grid Name="ChooseDishPage" Visibility="Visible" Grid.Row="1" Background="White">
            <!-- Choose Dish Button -->
            <Button Name="ChooseDishButton" 
            Height="60" 
            Width="100" 
            Background="LightSeaGreen" 
            Margin="350,44,350,310" 
            Panel.ZIndex="4"
            Click="ChooseDishButton_Click"
            Content="Choose Dish"
            FontSize="10"
            FontWeight="Bold"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Top"
            BorderBrush="Black"/>

            <!-- Dish Description Grid -->
            <Grid Name="DishDescription" Height="200" Width="600" Margin="10,80,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Row 0 -->
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="2">
                    <TextBlock Text="Dish Name:" Margin="5"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="2">
                    <TextBlock Text="Spaghetti" Margin="5"/>
                </Border>

                <!-- Row 1 -->
                <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="2">
                    <TextBlock Text="Calories:" Margin="5"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="2">
                    <TextBlock Text="500 kcal" Margin="5"/>
                </Border>

                <!-- Row 2 -->
                <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="2">
                    <TextBlock Text="Ingredients:" Margin="5"/>
                </Border>
                <Border Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="2">
                    <TextBlock Text="Pasta, Tomato Sauce, Cheese" Margin="5"/>
                </Border>

                <!-- Row 3 -->
                <Border Grid.Row="3" Grid.Column="0" BorderBrush="Black" BorderThickness="2">
                    <TextBlock Text="Allergens:" Margin="5"/>
                </Border>
                <Border Grid.Row="3" Grid.Column="1" BorderBrush="Black" BorderThickness="2">
                    <TextBlock Text="Dairy, Gluten" Margin="5"/>
                </Border>
            </Grid>
        </Grid>


    </Grid>



</Window>
