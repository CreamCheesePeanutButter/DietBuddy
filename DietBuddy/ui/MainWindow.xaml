<Window x:Class="DietBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DietBuddy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="430*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="1" Source="../src/login_background.jpg" Stretch="Fill" Visibility="Visible" Panel.ZIndex="0"/>

        <Grid Height="20" Panel.ZIndex="1">
            <Menu>
                <Menu.Effect>
                    <DropShadowEffect Color="Blue" BlurRadius="10" ShadowDepth="3" />
                </Menu.Effect>
                <MenuItem Header ="Option" FontSize="12">
                    <MenuItem Header = "Get Meal" Click="GetMeal_Click"/>
                    <MenuItem Header="Add dish recipe" Click ="AddDish_Click"/>
                </MenuItem>
            </Menu>
        </Grid>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="235" Width="440" Margin="0,102,0,0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Rectangle Fill="LightBlue"/>
            <Rectangle Grid.Row ="1" Fill="MintCream"/>
            <TextBlock Text="Welcome to Diet Buddy" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            
            <Grid Name ="UserInputGrid" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Login" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Grid.Row="1" Text="Username :" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                <TextBox Name="username" Grid.Row="1" Width="200" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,100,0"/>
                <TextBlock Grid.Row="2" Text="Age :" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                <TextBox Name ="user_age" Grid.Row="2" Width="200" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,100,0"/>
                <TextBlock Grid.Row="3" Text="Weight :" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                <TextBox Name = "user_weight" Grid.Row="3" Width="200" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,100,0"/>
                <Button Grid.Row="4" Content="Login" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoginButton_Click"/>

            </Grid>
        </Grid>

    </Grid>
</Window>
